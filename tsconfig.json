{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["**/node_modules/**/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@images/*": ["src/images/*"],
      "@data/*": ["src/data/*"]
    }
  }
}
